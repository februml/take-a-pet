    <title>Take a Pet!</title>

    <!-- Bootstrap Core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="css/freelancer.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <%- include('navigation', locals); %>

    <!-- Form Section -->
    <section class="" id="">
       <div class="container content">
            <div class="row">
                <div class="col-lg-12 text-center" style="margin-top: 40px; margin-bottom: 50px;">
                    <h3>Crie seu cadastro!</h3>
                    <hr class="star-primary">
                </div>
            </div>
            <form class="form-horizontal" method="post" action="cadastrarUsuario-action" novalidate>
                <div class="col-lg-12 col-lg-offset-2">
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2">Nome: <span style="color:red">*</span></label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="nome" name="nome" required />
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2">Nome para login: <span style="color:red">*</span></label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="username" name="username" required />
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2">Senha: <span style="color:red">*</span></label>
                        <div class="col-xs-4">
                            <input type="password" class="form-control" id="senha" name="senha" required />
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2">Data de Nascimento: <span style="color:red">*</span></label>
                        <div class="col-xs-4">
                            <input type="date" class="form-control" id="dataNascimento" name="dataNascimento"  min="1917-01-01" max="2004-01-01" required/>
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2">Telefone para contato: </label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="contato" name="contato" />
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2" for="email">Email: <span style="color:red">*</span></label>
                        <div class="col-xs-4">
                            <input type="email" class="form-control" id="email" name="email" required
                                data-validation-email-message="Informe um email válido"
                             />
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2" for="email">Região:</label>
                        <div class="col-xs-4">
                            <select class="form-control" name="regiao" id="regiao">
                                <option value="ZS">Zona Sul</option>
                                <option value="ZL">Zona Leste</option>
                                <option value="ZN">Zona Norte</option>
                                <option value="C">Centro</option>
                            </select>
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>
                    <div class="control-group formVertical">
                        <label class="control-label col-sm-2">Endereço: <span style="color:red">*</span></label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="endereço" name="endereco" required />
                            <p class="help-block msgValidacao"></p>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default" style="margin-left:43%;">Enviar</button>
					
					<div class="col-lg-11 col-lg-offset-1" style="margin-top: 50px;margin-left:5%;">
						<label class="control-label col-sm-5" style="font-size:17px;">Já é cadastrado? <a href="Login.html"> Faça login! </a></label>
					</div>
                </div>
            </form>
       </div>
    </section>

    <% include footer.ejs %>

    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/freelancer.js"></script>

    <script src="js/jqBootstrapValidation.js"></script>
</body>
</html>